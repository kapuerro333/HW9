function checkProbabilityTheory(numbers) {
    var numbers = 1000;
    var evenСalculation = 0;
    var oddСalculation = 0;
    for (var i = 0; i < numbers; i++) {
        var rnd = Math.floor(Math.random() * 901) + 100;
        if (rnd % 2 === 0) {
            evenСalculation++;
        } else {
            oddСalculation++;
        }
    }
    var totalСalculation = evenСalculation + oddСalculation;


    var evenPercentage = (evenСalculation / totalСalculation) * 100;

    var oddPercentage = (oddСalculation / totalСalculation) * 100;

    var evenToOdd = evenPercentage + "%" + "/" + oddPercentage + "%";

    console.log(evenСalculation);
    console.log(oddСalculation);

    console.log(totalСalculation);

    console.log(evenToOdd);
}
checkProbabilityTheory(1000)